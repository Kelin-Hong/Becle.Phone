                <Rectangle x:Name="list1tRec" Fill="Black" Height="20"></Rectangle>
                <ListBox x:Name="Lbcategory"   FontSize="22" BorderBrush="Black"  Background="LimeGreen" SelectionChanged="Lbcategory_SelectionChanged" Height="240">
