            </controls:Pivot>
            </StackPanel>
            <StackPanel x:Name="timePanel" Visibility="Collapsed" Height="300"   Background="LimeGreen" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0">
